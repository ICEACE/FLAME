<xmodel version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation='http://flame.ac.uk/schema/xmml_v2.xsd'>
    <!-- Model descriptions  -->
    <name>ICEACE</name>
    <version>Version 0.1.0, 29/03/2012</version>
    <description> Labour Market.</description>
    <environment>
        <functionFiles>
        <!-- List of C files that hold agent functions -->
            <file>household_functions_labour.c</file>
            <file>firm_functions_labour.c</file>
            <file>bank_functions_labour.c</file>
            <file>centralbank_functions_labour.c</file>
            <file>government_functions_labour.c</file>
        </functionFiles>
    </environment>

	<!-- List of agents -->
    <agents>
        <xagent>
            <name>Household</name>
            <description>A simple consumer and labourer agent.</description>
            <!-- Agent memory holding a list of variables -->
            <memory>
                <variable>
                    <type>int</type>
                    <name>my_employer_id</name>
                    <description>Employer ID of an household. A 0 means unemployed.</description>
                </variable>
                <variable>
                    <type>double</type>
                    <name>wage</name>
                    <description>Current wage earned.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>day_of_month_to_act</name>
                    <description>The day of the month to act for seeking a job.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>day_of_month_wage_recieved</name>
                    <description>The day of the month to wage recieved.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>previous_wages[3]</name>
                    <description>Holds wages earned in three previous months.</description>
                </variable>
            </memory>
            <!-- List of agent functions -->
            <functions>
                <function>
                    <name>idle</name>
                    <description>Job searching is not active.</description>
                    <currentState>02</currentState>
                    <nextState>07</nextState>
                    <condition>
                        <not><time>
                            <period>monthly</period>
                            <phase>a.day_of_month_to_act</phase>
                        </time></not>
                    </condition>
                </function>
                <function>
                    <name>household_labour_check_fired</name>
                    <description>Household checks layout status.</description>
                    <currentState>02</currentState>
                    <nextState>03a</nextState>
                    <condition>
                        <time>
                            <period>monthly</period>
                            <phase>a.day_of_month_to_act</phase>
                        </time>
                    </condition>
                    <inputs> <!-- fired messages -->
                        <input>
                            <messageName>fired</messageName>
                            <filter>
                            <!-- checks self id. -->
                                <lhs><value>a.id</value></lhs>
                                <op>EQ</op>
                                <rhs><value>m.employee_id</value></rhs>
                            </filter>
                        </input>
                    </inputs>
                </function>
                <function>
                    <name>household_labour_reemployment_application</name>
                    <description>Stage 01 of job applications. Already employed households apply with a turnover probability</description>
                    <currentState>03a</currentState>
                    <nextState>04</nextState>
                    <condition>
                        <lhs>
                            <value>a.my_employer_id</value>
                        </lhs>
                        <op>GT</op>
                        <rhs>
                            <value>0</value>
                        </rhs>
                    </condition>
                    <inputs> <!-- job announcement messages -->
                        <input>
                            <messageName>vacancy</messageName>
                            <filter>
                            <!-- checks higher wage announcements -->
                                <lhs><value>a.wage</value></lhs>
                                <op>LT</op>
                                <rhs><value>m.wage</value></rhs>
                            </filter>
                            <random>true</random>
                        </input>
                    </inputs>
                    <outputs>
                        <output>
                            <messageName>job_application</messageName>
                        </output>
                    </outputs>
                </function>
                <function>
                    <name>idle</name>
                    <description>Stage 01 of job applications. Unemployed households skip this stage</description>
                    <currentState>03a</currentState>
                    <nextState>05</nextState>
                    <condition>
                        <not>
                            <lhs><value>a.my_employer_id</value></lhs>
                            <op>GT</op>
                            <rhs><value>0</value></rhs>
                        </not>
                    </condition>
                </function>
                <function>
                    <name>household_labour_turnover</name>
                    <description>A job turnover.</description>
                    <currentState>04</currentState>
                    <nextState>07</nextState>
                    <inputs>
                        <input>
                            <messageName>job_offer</messageName>
                            <filter>
                                <lhs><value>a.id</value></lhs>
                                <op>EQ</op>
                                <rhs><value>m.employee_id</value></rhs>
                            </filter>
                        </input>
                    </inputs>
                    <outputs>
                        <output>
                            <messageName>job_change</messageName>
                        </output>
                    </outputs>
                </function>
                <function>
                    <name>household_labour_employment_application</name>
                    <description>Stage 02 of job market. Unemployed households apply.</description>
                    <currentState>05</currentState>
                    <nextState>06</nextState>
                    <inputs> <!-- job announcement messages -->
                        <input>
                            <messageName>vacancy_stage2</messageName>
                            <random>true</random>
                        </input>
                    </inputs>
                    <outputs>
                        <output>
                            <messageName>job_application_stage2</messageName>
                        </output>
                    </outputs>
                </function>
                <function>
                    <name>household_labour_employment</name>
                    <description>A new employment.</description>
                    <currentState>06</currentState>
                    <nextState>07</nextState>                                  
                    <inputs>
                        <input>
                        <messageName>job_offer_stage2</messageName>
                            <filter>
                                <lhs><value>a.id</value></lhs>
                                <op>EQ</op>
                                <rhs><value>m.employee_id</value></rhs>
                            </filter>
                        </input>
                    </inputs>
                </function>
                <function>
                    <name>idle</name>
                    <description>Does nothing at the point when it is not last day of the month.</description>
                        <currentState>07</currentState>
                        <nextState>end</nextState>
                        <condition>
                            <not><time>
                                <period>monthly</period>
                                <phase>a.day_of_month_wage_recieved</phase>
                            </time></not>
                        </condition>
                    </function>
                <function>
                    <name>household_labour_recieve_wage</name>
                    <description>Recieves payment and update wage history.</description>
                    <currentState>07</currentState>
                    <nextState>end</nextState>
                    <condition>
                        <time>
                            <period>monthly</period>
                            <phase>a.day_of_month_wage_recieved</phase>
                        </time>
                    </condition>
                </function>
            </functions>
        </xagent>
        <xagent>
            <name>Firm</name>
            <description>A simple production firm agent.</description>
            <!-- Agent memory holding a list of variables -->
            <memory>
                <variable>
                    <type>int</type>
                    <name>day_of_month_to_act</name>
                    <description>The day of the month to act</description>
                </variable>
                <variable>
                    <type>int_array</type>
                    <name>employees</name>
                    <description>Holds employee ids</description>
                </variable>
                <variable>
                    <type>double</type>
                    <name>wage_offer</name>
                    <description>Monthly wage offer.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>no_employees</name>
                    <description>Number of employees</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>vacancies</name>
                    <description>Number of vacancies</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>employees_needed</name>
                    <description>Number of workers a firm needs for next production</description>
                </variable>
            </memory>
            <!-- List of firm functions -->
            <functions>
                <function>
                    <name>idle</name>
                    <description>Labour market is not active.</description>
                    <currentState>02</currentState>
                    <nextState>end</nextState>
                    <condition>
                        <not>
                            <time>
                                <period>monthly</period>
                                <phase>a.day_of_month_to_act</phase>
                            </time>
                        </not>
                    </condition>
                </function>
                <function>
                    <name>firm_labour_workforce_needed</name>
                    <description>The firm computes required number of employees needed for incoming month.</description>
                    <currentState>02</currentState>
                    <nextState>03</nextState>
                    <condition>
                        <time>
                            <period>monthly</period>
                            <phase>a.day_of_month_to_act</phase>
                        </time>
                    </condition>
                </function>
                <function>
                    <name>idle</name>
                    <description>Firm does nothing</description>
                    <currentState>03</currentState>
                    <nextState>05</nextState>
                    <condition>
                        <lhs>
                            <value>a.no_employees</value>
                        </lhs>
                        <op>EQ</op>
                        <rhs>
                            <value>a.employees_needed</value>
                        </rhs>
                    </condition>
                    <inputs/>
                    <outputs/>
                </function>
                <function>
                    <name>firm_labour_fire</name>
                    <description>The firm decides to fire if employee needed is below number of employees it does have.</description>
                    <currentState>03</currentState>
                    <nextState>05</nextState>
                    <condition>
                        <lhs>
                            <value>a.no_employees</value>
                        </lhs>
                        <op>GT</op>
                        <rhs>
                            <value>a.employees_needed</value>
                        </rhs>
                    </condition>
                    <outputs>
                    <!-- List of possible messages sent out-->
                        <output>
                            <messageName>fired</messageName>
                        </output>
                    </outputs>
                </function>
                <function>
                    <name>firm_labour_job_announcement</name>
                    <description>The agent posts available positions.</description>
                    <currentState>03</currentState>
                    <nextState>04</nextState>
                    <condition>
                        <lhs>
                            <value>a.no_employees</value>
                        </lhs>
                        <op>LT</op>
                        <rhs>
                            <value>a.employees_needed</value>
                        </rhs>
                    </condition>
                    <outputs>
                    <!-- List of possible messages sent out-->
                        <output>
                            <messageName>vacancy</messageName>
                        </output>
                    </outputs>
                </function>
                <function>
                    <name>firm_labour_job_offer</name>
                    <description>The agent takes applications and makes offer.</description>
                    <currentState>04</currentState>
                    <nextState>05</nextState>
                    <inputs>
                        <input>
                            <messageName>job_application</messageName>
                            <filter>
                            <!-- checks applications sent to the firm. -->
                                <lhs><value>a.id</value></lhs>
                                <op>EQ</op>
                                <rhs><value>m.employer_id</value></rhs>
                            </filter>
                            <sort>
                                <key>employee_id</key>
                                <order>ascend</order>
                            </sort>
                        </input>
                    </inputs>
                    <outputs>
                        <output>
                            <messageName>job_offer</messageName>
                        </output>
                    </outputs>
                </function>
                <function>
                    <name>firm_labour_update</name>
                    <description>The agent updates labour status. In case of resignments.</description>
                        <currentState>05</currentState>
                        <nextState>06</nextState>
                        <inputs>
                            <input>
                                <messageName>job_change</messageName>
                                <filter>
                                <!-- Checks worker resignation. -->
                                <lhs><value>a.id</value></lhs>
                                    <op>EQ</op>
                                <rhs><value>m.employer_id</value></rhs>
                                </filter>
                            </input>
                        </inputs>
                </function>
                <function>
                    <name>firm_labour_job_announcement_stage2</name>
                    <description>The agent posts unfilled positions.</description>
                    <currentState>06</currentState>
                    <nextState>07</nextState>
                    <condition>
                        <lhs>
                            <value>a.no_employees</value>
                        </lhs>
                        <op>LT</op>
                        <rhs>
                            <value>a.employees_needed</value>
                        </rhs>
                    </condition>
                    <outputs>
                        <output>
                            <messageName>vacancy_stage2</messageName>
                        </output>
                    </outputs>
                </function>
                <function>
                    <name>idle</name>
                    <description>The agent has no vacant positions</description>
                    <currentState>06</currentState>
                    <nextState>end</nextState>
                    <condition>
                        <lhs>
                            <value>a.no_employees</value>
                        </lhs>
                        <op>GEQ</op>
                        <rhs>
                            <value>a.employees_needed</value>
                        </rhs>
                    </condition>
                </function>
                <function>
                    <name>firm_labour_job_offer_stage2</name>
                    <description>The agent takes applications and makes offer.</description>
                    <currentState>07</currentState>
                    <nextState>end</nextState>
                    <inputs>
                        <input>
                            <messageName>job_application_stage2</messageName>
                            <filter>
                            <!-- checks applications sent to the firm. -->
                                <lhs><value>a.id</value></lhs>
                                <op>EQ</op>
                                <rhs><value>m.employer_id</value></rhs>
                            </filter>
                            <sort>
                                <key>employee_id</key>
                                <order>ascend</order>
                            </sort>
                        </input>
                    </inputs>
                    <outputs>
                        <output>
                            <messageName>job_offer_stage2</messageName>
                        </output>
                    </outputs>
                </function>
            </functions>
        </xagent>
        <xagent>
            <name>Bank</name>
            <description>A simple bank agent.</description>
            <!-- Agent memory holding a list of variables -->
            <memory></memory>
            <!-- List of agent functions -->
            <functions>
                <function>
                    <name>bank_labour_dummy</name>
                    <description>A dummy stub function.</description>
                    <currentState>02</currentState>
                    <nextState>end</nextState>
                </function>
            </functions>
        </xagent>
        <xagent>
            <name>CentralBank</name>
            <description>A simple central bank agent.</description>
            <!-- Agent memory holding a list of variables -->
            <memory></memory>
            <!-- List of agent functions -->
            <functions>
                <function>
                    <name>centralbank_labour_dummy</name>
                    <description>A dummy stub function.</description>
                    <currentState>02</currentState>
                    <nextState>end</nextState>
                </function>
            </functions>
        </xagent>
        <xagent>
            <name>Government</name>
            <description>A simple government agent</description>
            <!-- Agent memory holding a list of variables -->
            <memory></memory>
            <!-- List of agent functions -->
            <functions>
                <function>
                <name>government_labour_dummy</name>
                <description>A dummy stub function.</description>
                <currentState>02</currentState>
                <nextState>end</nextState>
                </function>
            </functions>
        </xagent>
    </agents>
    <messages>
        <message>
            <name>fired</name>
            <description>Sent by a firm to notify an employee who is fired.</description>
            <variables>
                <variable>
                    <type>int</type>
                    <name>employee_id</name>
                    <description>Employee ID who has been fired.</description>
                </variable>
            </variables>
        </message>
        <message>
            <name>vacancy</name>
            <description>Sent by a Firm to  post a vacancy.</description>
            <variables>
                <variable>
                    <type>int</type>
                    <name>employer_id</name>
                    <description>Firm agent ID who posts a new position.</description>
                </variable>
                <variable>
                    <type>double</type>
                    <name>wage</name>
                    <description>Amount of salary to be offered.</description>
                </variable>
            </variables>
        </message>
        <message>
            <name>job_application</name>
            <description>Sent by an household to apply a posted vacancy.</description>
            <variables>
                <variable>
                    <type>int</type>
                    <name>employee_id</name>
                    <description>Household agent ID who applies a new job.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>employer_id</name>
                    <description>Firm agent ID who has announced the position.</description>
                </variable>
            </variables>
        </message>
        <message>
            <name>job_offer</name>
            <description>Sent by a firm informing a filled position.</description>
            <variables>
                <variable>
                    <type>int</type>
                    <name>employer_id</name>
                    <description>Firm agent ID that has filled a post.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>employee_id</name>
                    <description>Household agent ID who has been offered a position.</description>
                </variable>
                <variable>
                    <type>double</type>
                    <name>wage</name>
                    <description>Amount of salary that is offered.</description>
                </variable>
            </variables>
        </message>
        <message>
            <name>job_change</name>
            <description>Sent by a worker to notify a resigned position.</description>
            <variables>
                <variable>
                    <type>int</type>
                    <name>employer_id</name>
                    <description>Firm agent ID of the position held.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>employee_id</name>
                    <description>Household aent ID who is changing the job.</description>
                </variable>
            </variables>
        </message>
        <message>
            <name>vacancy_stage2</name>
            <description>Sent by a Firm to post unfilled vacancy.</description>
            <variables>
                <variable>
                    <type>int</type>
                    <name>employer_id</name>
                    <description>Firm agent ID who posts unfilled position.</description>
                </variable>
                <variable>
                    <type>double</type>
                    <name>wage</name>
                    <description>Amount of salary to be offered.</description>
                </variable>
            </variables>
        </message>
        <message>
            <name>job_application_stage2</name>
            <description>Sent by an unemployed household to apply a posted vacancy.</description>
            <variables>
                <variable>
                    <type>int</type>
                    <name>employee_id</name>
                    <description>Household agent ID who applies to a job.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>employer_id</name>
                    <description>Firm agent ID who has re-announced the position.</description>
                </variable>
            </variables>
        </message>
        <message>
            <name>job_offer_stage2</name>
            <description>Sent by a firm informing a filled position.</description>
            <variables>
                <variable>
                    <type>int</type>
                    <name>employer_id</name>
                    <description>Firm agent ID that has filled a post.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>employee_id</name>
                    <description>Household agent ID who has been offered a position.</description>
                </variable>
                <variable>
                    <type>double</type>
                    <name>wage</name>
                    <description>Amount of salary that is offered.</description>
                </variable>
            </variables>
        </message>
    </messages>
</xmodel>