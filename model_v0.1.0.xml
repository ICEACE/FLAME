<xmodel version="2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation='http://flame.ac.uk/schema/xmml_v2.xsd'>
    <!-- Model descriptions  -->
    <name>ICEACE</name>
    <version>Version 0.1.0, 29/03/2012</version>
    <description>ICEACE - Labour Market </description>
    <models>
        <model>
            <file>Market_Consumption/model.xml</file>
            <enabled>true</enabled>
        </model>
        <model>
            <file>Market_Labour/model_labour.xml</file>
            <enabled>true</enabled>
        </model>
        <model>
            <file>Market_Production/model_production.xml</file>
            <enabled>true</enabled>
        </model>
    </models>
    <environment>
        <constants>
            <variable>
                <type>double</type>
                <name>zeta_turnover_probability</name>
                <description>A probability of a uniform distribution that determines turnover rate.</description>
            </variable>
            <variable>
                <type>double</type>
                <name>beta_housing_expenditure</name>
                <description>A threshold value denoting expenditure on housing, as a proportion of total income</description>
            </variable>
            <variable>
                <type>double</type>
                <name>ratio_debt_firm</name>
                <description>Ratio of debt to be paid by a firm.</description>
            </variable>
            <variable>
                <type>double</type>
                <name>mu_production_markup</name>
                <description>Rate of increase in production in a sold-out case.</description>
            </variable>
            <variable>
                <type>double</type>
                <name>eta_firm_memory_persistance</name>
                <description>A paramter holding to what extend firms previous sale history play on final production decision.</description>
            </variable>
        </constants>
        <functionFiles>
        <!-- List of C files that hold agent functions -->
            <file>library_functions.c</file>
            <file>firm_functions_top.c</file>
            <file>household_functions_top.c</file>
            <file>bank_functions_top.c</file>
            <file>government_functions_top.c</file>
            <file>centralbank_functions_top.c</file>
            <file>jpoffice_functions_top.c</file>
        </functionFiles>
        <dataTypes>
            <dataType>
                <name>vacancy</name>
                <description>Firm vacancy information.</description>
                <variables>
                    <variable>
                        <type>int</type>
                        <name>id</name>
                        <description>Id of the firm agent.</description>
                    </variable>
                    <variable>
                        <type>double</type>
                        <name>wage</name>
                        <description>Wage offered by the firm that holds the vacancy.</description>
                    </variable>
                </variables>
            </dataType>
            <dataType>
                <name>employee</name>
                <description>Job applicant data.</description>
                <variables>
                    <variable>
                        <type>int</type>
                        <name>id</name>
                        <description>Id of the household agent.</description>
                    </variable>
                    <variable>
                        <type>double</type>
                        <name>wage</name>
                        <description>Current wage of the job applicant.</description>
                    </variable>
                </variables>
            </dataType>
        </dataTypes>
        <timeUnits>
            <timeUnit>
                <name>daily</name>
                <unit>iteration</unit>
                <period>1</period>
            </timeUnit>
            <timeUnit>
                <name>weekly</name>
                <unit>daily</unit>
                <period>5</period>
            </timeUnit>
            <timeUnit>
                <name>monthly</name>
                <unit>weekly</unit>
                <period>4</period>
            </timeUnit>
            <timeUnit>
                <name>quarterly</name>
                <unit>monthly</unit>
                <period>3</period>
            </timeUnit>
            <timeUnit>
                <name>yearly</name>
                <unit>monthly</unit>
                <period>12</period>
            </timeUnit>
        </timeUnits>
    </environment>

	<!-- List of agents -->
    <agents>
        <xagent>
            <name>firm</name>
            <description>A simple firm agent.</description>
            <memory>
                <variable>
                    <type>int</type>
                    <name>id</name>
                    <description>Agent ID.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>bank_id</name>
                    <description>Bank ID at which the agent maintains its payment account.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>isconstructor</name>
                    <description>Identifies if the firm is a constractor firm or not.</description>
                </variable>
            </memory>
            <functions>
                <function>
                    <name>firm_notifier</name>
                    <description>Notifies its id by printf.</description>
                    <currentState>start</currentState>
                    <nextState>FirmConsumption</nextState>
                </function>
             </functions>
        </xagent>
        <xagent>
            <name>household</name>
            <description>A simple consumer and labourer agent.</description>
            <memory>
                <variable>
                    <type>int</type>
                    <name>id</name>
                    <description>Agent ID.</description>
                </variable>
                <variable>
                    <type>int</type>
                    <name>bank_id</name>
                    <description>Bank ID at which the agent maintains its payment account.</description>
                </variable>
            </memory>
            <functions>
                <function>
                    <name>household_notifier</name>
                    <description>Notifies its id by printf.</description>
                    <currentState>start</currentState>
                    <nextState>HHConsumption</nextState>
                </function>
            </functions>
        </xagent>
        <xagent>
            <name>jpoffice</name>
            <description>An institutional agent acting in labour market.</description>
            <memory>
            <variable>
                <type>int</type>
                <name>id</name>
                <description>Agent ID.</description>
            </variable>
            </memory>
            <functions>
                <function>
                    <name>jpoffice_notifier</name>
                    <description>Notifies its id by printf.</description>
                    <currentState>start</currentState>
                    <nextState>JPOLabourStage1</nextState>
                </function>
            </functions>
        </xagent>
        <xagent>
            <name>bank</name>
            <description>A simple bank agent.</description>
            <memory>
                <variable>
                    <type>int</type>
                    <name>id</name>
                    <description>Agent ID.</description>
                </variable>
            </memory>
            <functions>
                <function>
                    <name>bank_notifier</name>
                    <description>Notifies its id by printf.</description>
                    <currentState>start</currentState>
                    <nextState>BankConsumption</nextState>
                </function>
            </functions>
        </xagent>
        <xagent>
            <name>government</name>
            <description>A simple government agent</description>
            <memory>
                <variable>
                    <type>int</type>
                    <name>id</name>
                    <description>Agent ID.</description>
                </variable>
            </memory>
            <functions>
                <function>
                    <name>government_notifier</name>
                    <description>Notifies its id by printf.</description>
                    <currentState>start</currentState>
                    <nextState>GovConsumption</nextState>
                </function>
            </functions>
        </xagent>
        <xagent>
            <name>centralbank</name>
            <description>A simple central bank agent.</description>
            <memory>
                <variable>
                    <type>int</type>
                    <name>id</name>
                    <description>Agent ID.</description>
                </variable>
            </memory>
            <functions>
                <function>
                <name>centralbank_notifier</name>
                <description>Notifies its id by printf.</description>
                <currentState>start</currentState>
                <nextState>CBConsumption</nextState>
                </function>
            </functions>
        </xagent>
    </agents>
    <messages>
        <message>
            <name>id_notification</name>
            <description>Sent by an agent to declare its id.</description>
            <variables>
                <variable>
                    <type>int</type>
                    <name>id</name>
                    <description>the agent ID.</description>
                </variable>
                <variable>
                    <type>char</type>
                    <name>agent_label</name>
                    <description>the agent name</description>
                </variable>
            </variables>
        </message>
    </messages>
</xmodel>